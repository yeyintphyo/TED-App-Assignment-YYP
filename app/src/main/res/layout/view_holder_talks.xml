<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_medium"
    card_view:cardElevation="@dimen/margin_medium"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        >

        <ImageView
            android:id="@+id/iv_talk_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/talks_list_img_height"
            android:src="@drawable/ronaldo_img"
            android:layout_marginTop="@dimen/margin_medium"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristiano Ronaldo"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_below="@id/iv_talk_img"
            android:layout_marginTop="-48dp"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ronaldo keeps his Chamions League"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_regular"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_below="@id/iv_talk_img"
            android:layout_marginTop="@dimen/margin_xlarge_n"
            />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:46"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_small"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_below="@id/iv_talk_img"
            android:layout_marginTop="@dimen/margin_xlarge_n"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/margin_medium"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

