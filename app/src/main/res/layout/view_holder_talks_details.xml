<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/margin_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_talk_img"
            android:layout_width="@dimen/next_talks_img_width"
            android:layout_height="@dimen/next_talks_img_height"
            android:src="@drawable/champions_img"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristiano Ronaldo"
            android:layout_alignTop="@id/iv_talk_img"
            android:layout_toRightOf="@id/iv_talk_img"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small_n"
            />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How your brain decides what is beautiful"
            android:textColor="@color/primary_text"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@id/tv_name"
            />

        <ImageButton
            android:id="@+id/btn_next_more_setting"
            android:layout_width="@dimen/margin_small"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_brown_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/tv_name"
            android:background="@android:color/transparent"
            />

        <TextView
            android:id="@+id/tv_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:50"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white_text"
            android:layout_alignBottom="@id/iv_talk_img"
            android:layout_alignRight="@id/iv_talk_img"
            android:background="@color/primary_text"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
