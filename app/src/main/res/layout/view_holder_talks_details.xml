<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_talk_img"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:src="@drawable/champions_img"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_next_talker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cristiano Ronaldo"
        android:layout_alignTop="@id/iv_talk_img"
        android:layout_toRightOf="@id/iv_talk_img"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small_n"
        />

    <TextView
        android:id="@+id/tv_next_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How your brain decides what is beautiful"
        android:textColor="@color/primary_text"
        android:layout_alignLeft="@id/tv_next_talker_name"
        android:layout_below="@id/tv_next_talker_name"
        />

    <ImageButton
        android:id="@+id/btn_next_more_setting"
        android:layout_width="@dimen/margin_small"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_brown_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_next_talker_name"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/tv_talks_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:50"
        android:textSize="@dimen/text_small"
        android:textColor="@color/white_text"
        android:layout_alignBottom="@id/iv_talk_img"
        android:layout_alignRight="@id/iv_talk_img"
        android:background="@color/primary_text"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        />

</RelativeLayout>